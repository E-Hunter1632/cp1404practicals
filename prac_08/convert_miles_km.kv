BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            multiline: False
            on_text: app.convert_miles_km(input_number.text)
#
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(input_number.text, 1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(input_number.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.convert_miles_km(input_number.text)
    Label:
        id: result_label
        color: (1, 1, 0, 1)
